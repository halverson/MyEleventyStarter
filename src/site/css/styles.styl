// --- Colors ---

$primary-col = blue
$dark-col = #000000
$light-col = gray


// --- Mixins ---

transition(d)
  transition all d ease-out


// --- Fonts ---


// --- Basic ---

html, body
  margin 0
  padding 0

html
  font-size 16px

body
  width 100%

div, section, body, nav, header, footer, form
  box-sizing border-box

a
  &:hover
    color $primary-col

a, p, button, input, li
  font-size 1rem

small
  font-size 0.8rem

h1, h2, h3, h4, h5, p
  margin-top 0
  padding 0


// --- Layout Utilities ---

.flex-row
  display flex
  flex-direction row

.flex-col
  display flex
  flex-direction column

.wrap
  flex-wrap wrap

.page-width
  width 80%
  max-width 62.5rem

.full-width
  width 100%

.half-width-gap
  width 49%

.half-width
  width 50%

.one-third
  width 33.4%

.two-thirds
  width 66.6%

@media screen and (max-width: 800px)
  .half-width, .half-width-gap, .one-third, .two-thirds
    width 100%

.row-align-left
  justify-content flex-start

.row-align-right
  justify-content flex-end

.row-align-center
  justify-content center

.row-center-vert
  align-items center

.col-align-left
  align-items flex-start

.col-align-right
  align-items flex-end

.col-align-center
  align-items center

.col-center-vert
  justify-content center

.space-between
  justify-content space-between

.space-evenly
  justify-content space-evenly

.space-around
  justify-content space-around

.center-both
  align-items center
  justify-content center


// --- Spacing Utilities ---

.margin-section
  margin 0 0 5rem 0

.margin-medium
  margin 0 0 3.75rem 0

.margin-small
  margin 0 0 1.8rem 0

.margin-smallest
  margin 0 0 0.9rem 0

.padding-content
  padding 1.8rem

.wrap-margin
  margin 0 0 1.8rem 0

.wrap-margin-sm
  margin 0 0 1.8rem 0

.no-margin
  margin 0

.last-no-margin
  &:last-child
    margin-bottom 0

@media screen and (min-width: 536px)
  .wrap-margin-sm
    margin-bottom 0

@media screen and (min-width: 800px)
  .margin-section
    margin 0 0 12.5rem 0

  .padding-content
    padding 3.75rem

  .wrap-margin
    margin-bottom 0


// --- Positioning Utilities ---

.fixed
  position fixed

.relative
  position relative

.absolute
  position absolute


// --- Typography Utilities ---

.text-primary
  color $primary-col

.text-light
  color $light-col

.text-dark
  color $dark-col

.text-center
  text-align center

.text-right
  text-align right

.text-left
  text-align left

.text-bold
  font-weight 700

// --- Basic Styling Utilities ---

.bg-primary
  background-color $primary-col

.bg-light
  background-color $light-col

.bg-dark
  background-color $dark-col

.drop-shadow
  box-shadow 0 15px 35px rgba(0,0,0,0.5)

.round-corners
  border-radius 0.4rem

.round-corners-small
  border-radius 0.2rem

.round-corners-circle
  border-radius 100%

.overflow-hidden
  overflow hidden

.img-cover
  overflow hidden
  img
    width 100%
    height 100%
    object-fit cover

.button
  position relative
  display flex
  flex-direction row
  align-items center
  justify-content center

  text-align center
  color $primary-col
  padding 1rem
  background-color $light-col
  font-weight 700
  &:visited
    color $primary-col


// --- Headers ---


// --- Navigation ---


// --- Form Elements ---

.input-field
  display block
  box-sizing border-box
  min-height 3rem
  padding 0.8rem
  border none
  width 100%

  &textarea
    max-width 100%

input[type="submit"]
  display block
  box-sizing border-box
  appearance none
  border none

  cursor pointer


